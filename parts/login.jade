template(name='login')
    .ui.padded.stackable.grid
        .centered.row
            .eight.wide.column
                // img.ui.image(src="{{c.url 'kitchen_logo' gravity='face' crop='fill'}}")
                img.ui.centered.image(src="https://cdn.shopify.com/s/files/1/0530/4048/0439/files/Screen_Shot_2021-05-14_at_12.58.25_PM_360x.png?v=1621018741")
                .ui.center.aligned.header.f12 login!
            .eight.wide.column
                .ui.inline.small.header 
                    +i name='user-male'
                    // i.user.outline.icon
                    |username
                .ui.fluid.large.input(class=login_class)
                    input.username(type='text')
                .spacer
                .ui.inline.small.header 
                    +i name='password'
                    // i.lock.icon
                    | password
                .ui.fluid.large.input(class=login_class)
                    input.password(type='password')
                //- if username
                //- if logging_in
                .ui.hidden.divider
                .ui.fluid.big.green.circular.basic.button.enter(title="login #{username}" class=enter_class)
                    +i name='internal'
                    |login
                    strong #{username}
                    //- i.right.chevron.icon
                .ui.center.aligned.basic.segment    
                    a.ui.large.circular.basic.button.fly_right(href='/register')
                        i.plus.icon
                        |register
                    a.ui.large.circular.basic.button(href='/forgot_password')
                        // i.refresh.icon
                        +i name='forgot-password' cl='ui mini inline image'                    
                        |forgot password

template(name='register')
    //- img.ui.fluid.image.bg_overlay(src="{{c.url 'forest-bg2' width=1000 crop='fit'}}")    
    .ui.padded.stackable.grid
        .two.column.row
            .column
                img.ui.centered.image(src="https://cdn.shopify.com/s/files/1/0530/4048/0439/files/Screen_Shot_2021-05-14_at_12.58.25_PM_360x.png?v=1621018741")
            .column
                h1.ui.center.aligned.header
                    +i name='add-user-male'
                    | register
                .ui.inline.small.header 
                    +i name='user-male'
                    |username
                .ui.fluid.large.input(class=login_class)
                    input.username(type='text')
                .spacer
                .ui.inline.small.header 
                    +i name='password'
                    | password
                .ui.fluid.large.input(class=login_class)
                    input.password(type='password')

                //- .ui.fluid.labeled.input(class=login_class)
                //-     .ui.small.inline.header 
                //-         i.lock.grey.icon
                //-         | password again
                //-     input.password2(type='password')
                .ui.hidden.divider
                if can_register
                    //- if registering
                    .ui.fluid.big.circular.basic.button.register(class=enter_class)
                        // i.user.plus.icon
                        +i name='add-user-male'
                        |register
                else
                    .ui.fluid.big.disabled.button(class=enter_class)
                        // i.user.plus.icon
                        +i name='add-user-male'
                        |register
                    // // .ui.small.header username "#{username}" found
                .ui.horizontal.divider or
                a.ui.fluid.basic.button(href='/login') 
                    // i.right.chevron.icon
                    +i name='internal' cl='ui avatar image'
                    |login